.fillWindow.noSelect
  .glass(style="width: 40vw; margin-left: 30vw; margin-top: 80px;")
    div(style="text-align: center;")
      //- img(src="./img/kb.png", style="width: 200px; height: 200px;")
      h1 {{ greeting }}

    hr

    div(style="margin-top: 10px;")
      div(v-on:click="streamerLogin", style="width: 50%; display: inline-block;")
        img.loginPicture.noSelect(v-bind:src="streamerPicture")
      div(style="width: 50%; display: inline-block; vertical-align: top;")
        h4 Streamer Account
        h5 {{ streamerName }}

    div(style="margin-top: 10px;")
      div(v-on:click="botLogin", style="width: 50%; display: inline-block;")
        img.loginPicture.noSelect(v-bind:src="botPicture")
      div(style="width: 50%; display: inline-block; vertical-align: top;")
        h4 Bot Account
        h5 {{ botName }}

    hr

    div(style="text-align: right; margin-top: 10px;")
      button(v-on:click="login(streamerName, botName)", v-bind:class="andand(streamerName, botName) ? '' : 'disabled'") Start KoalaBot


  transition(v-on:before-enter="fadeBeforeEnter", v-on:enter="fadeEnter", v-on:leave="fadeLeave", v-bind:css="false")
    div(v-show="showStreamerLogin", v-on:click="showStreamerLogin = false", style="width: 100%; height: 100%; background-color: rgba(0,0,0,0.9); position: absolute; top: 0; left: 0; z-index: 9001;")
      iframe#streamerLoginFrame(src="", style="outline: none; width: 60vw; height: 730px; margin-left: 20vw; margin-top: 25px; padding: 0; border: 0;", nwfaketop)

  transition(v-on:before-enter="fadeBeforeEnter", v-on:enter="fadeEnter", v-on:leave="fadeLeave", v-bind:css="false")
    div(v-show="showBotLogin", v-on:click="showBotLogin = false", style="width: 100%; height: 100%; background-color: rgba(0,0,0,0.9); position: absolute; top: 0; left: 0; z-index: 9001;")
      iframe#botLoginFrame(src="", style="outline: none; width: 60vw; height: 730px; margin-left: 20vw; margin-top: 25px; padding: 0; border: 0;", nwfaketop)
