      br
    .row
      .col-sm-3
      .col-sm-6
        .panel.panel-default(style="box-shadow: 0px 0px 8px #121212;").noSelect
          .panel-body
            p.text-center
              img(src="./img/kb.png", style="width: 200px; height: 200px;")
            h1.text-center Hello.
            hr
            .row
              .col-sm-6
                | Streaming Account
                h4.text-success {{ streamerName }}
              .col-sm-6
                button.btn.btn-primary.pull-right.noSelect(v-on:click="streamerLogin()") Twitch Login
                br
                br
                br
            hr
            .row
              .col-sm-6
                | Bot Account
                h4.text-success {{ botName }}
              .col-sm-6
                button.btn.btn-primary.pull-right.noSelect(v-on:click="botLogin()") Twitch Login
                br
                br
                br
            hr
            button.btn.btn-default.pull-right.noSelect(v-on:click="login(streamerName, botName)", v-bind:class="andand(streamerName, botName) ? '' : 'disabled'")
              | Start KoalaBot

  transition(v-on:before-enter="slideRightBigBeforeEnter", v-on:enter="slideRightBigEnter", v-on:leave="slideRightBigLeave", v-bind:css="false")
    #twitchLogin.modal(v-show="showTwitchLogin")
      .modal-dialog
        .modal-content
          .modal-body(style="min-height: 700px; padding: 0;")
            iframe#twitchLoginFrame(src="", style="outline: none; width: 100%; height: 700px; margin: 0; padding: 0; border: 0; float: left;", nwfaketop)
